{erl_opts, [fail_on_warning,
            warn_unused_vars,
            warn_export_all,
            warn_shadow_vars,
            warn_unused_import,
            warn_unused_function,
            warn_bif_clash,
            warn_unused_record,
            warn_deprecated_function,
            warn_obsolete_guard,
            warn_export_vars,
            warn_exported_vars,
            %%warn_untyped_record,
            % warn_missing_spec,
            % strict_validation,
            debug_info,
            {parse_transform, lager_transform}]}.

{deps, [
    {lager, ".*",
     {git, "https://github.com/basho/lager.git",
      {tag, "2.1.0"}}},

    %% snappy compression
    {snappy, ".*",
     {git, "https://github.com/fdmanana/snappy-erlang-nif.git",
      {branch, "master"}}}
]}.

{pre_hooks, [{clean, "rm -fr ebin priv erl_crash.dump"}]}.
